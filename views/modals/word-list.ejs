<div class="modal fade" id="addwordmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Word</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/addword" method="post">
          <div class="form-group row">
            <label for="word" class="col-md-4 col-form-label">Word:</label>
            <div class="col-md-8">
              <input type="text" class="form-control" id="word" name="word" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="phonetic" class="col-md-4 col-form-label">Phonetic Symbol:</label>
            <div class="col-md-3">
              <input type="text" class="form-control" id="phonetic" name="phonetic">
            </div>
          </div>
          <div class="form-group row">
            <label for="meaning" class="col-md-4 col-form-label">Meaning:</label>
            <div class="col-md-8">
              <textarea rows="5" class="form-control" id="meaning" name="meaning" required></textarea>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>

